@model HuellitasVetWeb.Entidades.Servicio

@{
    ViewData["Title"] = "Detalle Cita";
    Layout = "~/Views/Shared/_Layout.cshtml";


}




@if (ViewBag.msj != null)
{
    <div class="alert alert-primary" role="alert" style="width: 365px; height: 80px;">
        @ViewBag.msj
    </div>
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-xl-8">
        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col-8">
                        <h3 class="mb-0">Registrar Cita</h3>
                    </div>
                </div>
            </div>
            <div class="card-body">
                @{
                    if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                }

               

                <h6 class="heading-small text-muted mb-4">Información Cita</h6>

                @using (Html.BeginForm("RegistrarCita", "Citas"))
                 {
                <div class="pl-lg-4">
                    <div class="row">

                        @Html.HiddenFor(m => m.IdServicio)
                        @Html.HiddenFor(m => m.idhorario)
                       
                        
                       
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-fecha">Servicio</label>
                                @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", @required = "required", @readonly = "readonly" })


                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-fecha">Fecha</label>
                                @Html.TextBoxFor(m => m.fecha, new { @class = "form-control", @required = "required", @readonly = "readonly", @type = "date" })


                            </div>
                        </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-fecha">Hora</label>
                                    @Html.TextBoxFor(m => m.hora, new { @class = "form-control", @required = "required", @readonly = "readonly" })

                                </div>
                            </div>

                       

                        
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-servicio">Mascota</label>
                                @Html.DropDownListFor(m => m.IdMascota, ViewBag.MascotasList as List<SelectListItem>, new { @class = "form-control", @required = "required", @id = "servicio" })
                            </div>
                        </div>
                       
                    </div>
                </div>


                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" style="background-color:#855CBA; color:white" class="btn btn-primary my-4">Registrar</button>
                </div>

                }
            </div>
        </div>
    </div>
</div>



@model HuellitasVetWeb.Entidades.Especie
@{
    ViewData["Title"] = "RegistrarEspecie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.msj != null)
{
    <div class="alert alert-primary" role="alert" style="width: 365px; height: 80px;">
        @ViewBag.msj
    </div>
}

@using (Html.BeginForm("RegistrarEspecie", "Especie"))
{
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Registrar Especie </h3>
                        </div>
                    </div>
                </div>

                <div class="card-body">

                    @{
                        
                        if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                    }

                    <h6 class="heading-small text-muted mb-4">Información</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Nombre de la especie: </label>
                                    @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", @placeholder = "Escriba el nombre de la especie", @required = "required" })
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <input style="background-color:#855CBA; color:white" type="submit" class="btn my-4" value="Registrar">
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@model HuellitasVetWeb.Entidades.Usuario
@{
    ViewData["Title"] = "Registro";
    Layout = "~/Views/Shared/_Layout_Externo.cshtml";
}

<div class="header py-7 py-lg-8 pt-lg-9" style="background-color: #BD7AD5">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-xl-5 col-lg-6 col-md-8 px-5">
                    <h1 class="text-white">Registrar una nueva cuenta</h1>
                    <p class="text-lead text-white">Complete el formulario para crear una cuenta nueva</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt--8 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card bg-secondary border-0 mb-0">

                <div class="card-body px-lg-5 py-lg-5">

                    @using (Html.BeginForm("Registro", "Home"))
                    {
                        <div class="form-group mb-3">
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-hat-3"></i></span>
                                </div>
                                @Html.TextBoxFor(m => m.NombreCompleto, new { @type = "text", @class = "form-control", @placeholder = "Nombre Completo", @maxlength = "255", @required = "required" })
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-badge"></i></span>
                                </div>
                                @Html.TextBoxFor(m => m.Identificacion, new { @type = "text", @class = "form-control", @placeholder = "Identificación", @maxlength = "12", @required = "required" })
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-email-83"></i></span>
                                </div>
                                @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "Correo", @maxlength = "50", @required = "required" })
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-mobile-button"></i></span>
                                </div>
                                @Html.TextBoxFor(m => m.Telefono, new { @type = "text", @class = "form-control", @placeholder = "Teléfono", @maxlength = "50", @required = "required" })
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-square-pin"></i></span>
                                </div>
                                @Html.TextAreaFor(m => m.Direccion, new { @type = "text", @class = "form-control", @placeholder = "Dirección", @maxlength = "250", @required = "required" })
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="input-group input-group-merge input-group-alternative">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="ni ni-lock-circle-open"></i></span>
                                </div>
                                @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control", @placeholder = "Contraseña", @maxlength = "12", @required = "required" })
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" style="background-color:#855CBA; color:white" class="btn btn-primary my-4">Crear cuenta</button>
                        </div>
                        @if (ViewBag.msj != null)
                        {
                            <div class="alert alert-warning" role="alert">
                                @ViewBag.msj

                            </div>
                        }
                    }

                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <a href="@Url.Action("InicioSesion","Home")" class="text-light"><small>Ya tienes una cuenta? Iniciar sesión</small></a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/enlace.js"></script>

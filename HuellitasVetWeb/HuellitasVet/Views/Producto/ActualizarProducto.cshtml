@model HuellitasVetWeb.Entidades.Producto
@{
    ViewData["Title"] = "Actualizar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.msj != null)
{
    <div class="alert alert-primary" role="alert" style="width: 365px; height: 80px;">
        @ViewBag.msj
    </div>
}

@using (Html.BeginForm("ActualizarProducto", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Actualizar Producto </h3>
                        </div>

                    </div>
                </div>

                <div class="card-body">

                    @{
                        if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }
                    }
                    @Html.HiddenFor(m => m.IdProducto)
                    @Html.HiddenFor(m => m.RutaImagen)
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-username">Nombre del producto</label>
                                    @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control", @placeholder = "Ingrese el nombre del producto", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Precio</label>
                                    @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", @placeholder = "Ingrese el precio", @required = "required", @type = "number" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Categoría</label>
                                    @Html.DropDownListFor(m => m.CategoriaId, ViewBag.TiposCategorias as List<SelectListItem>, new { @class = "form-control", @required = "required", })
                                </div>
                            </div>
                            <div class="col-lg-6 ">
                                <div class="form-group">
                                    <label class="form-control-label" for="imagen-actual">Imagen Actual</label>
                                    <img class="form-control" src="@ViewBag.RutaImagen" style="width: 250px; height: 250px; ">
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="imagen">Imagen</label>
                                    <input type="file" id="ImagenProducto" name="ImagenProducto" class="form-control form-control-user" />

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <input style="background-color:#855CBA; color:white" type="submit" class="btn my-4" value="Actualizar">
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@model List<HuellitasVetWeb.Entidades.Rol>

@{
    ViewData["Title"] = "ConsultarRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if (ViewBag.msj != null)
{
    <div class="alert alert-primary" role="alert" style="width: 365px; height: 80px;">
        @ViewBag.msj
    </div>
}

<div class="container" style="margin-top: 50px;">
    <div class="card">
        <div class="card-header">
            <h3 class="mb-0">Lista de Roles</h3>
        </div>
        <div class="card-body" style="padding-left: 15px; padding-right: 15px;">
            <table id="tabla" class="table table-bordered dataTable" style="width: 100%;">
                <thead>
                    <tr role="row">
                        <th style="font-size: 12px; font-weight: bold;"><strong>ID</strong></th>
                        <th style="font-size: 12px; font-weight: bold;"><strong>Nombre</strong></th>

                        <th style="font-size: 12px; font-weight: bold;"><strong>Acciones</strong></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="odd">
                            <td style="vertical-align: middle">@item.IdRol</td>
                            <td style="vertical-align: middle">@item.Nombre</td>

                            <td style="text-align: center; vertical-align: middle">
                                <a class="btn btn-icon btn-primary" style="background-color:#855CBA; color:white; width: 70px; height: 30px; display: inline-flex; align-items: center; justify-content: center;" type="button" href="@(Url.Action("ActualizarRol","Rol",new { id = item.IdRol}))">
                                    Editar
                                </a>
                                <a class="btn btn-icon btn-primary btn-deleteRol" style="background-color:#855CBA; color:white; width: 80px; height: 30px; display: inline-flex; align-items: center; justify-content: center;" type="button" href="@(Url.Action("EliminarRol","Rol",new { id = item.IdRol}))" data-url="@(Url.Action("EliminarRol", "Rol", new { id = item.IdRol }))">
                                    Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/page/jquery/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/js/sweetalerts.js"></script>
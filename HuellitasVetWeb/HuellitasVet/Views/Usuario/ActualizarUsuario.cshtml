@model HuellitasVetWeb.Entidades.Usuario
@{
    ViewData["Title"] = "Actualizar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("ActualizarUsuario", "Usuario"))
{
    @Html.HiddenFor(m => m.IdUsuario)
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-xl-8">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-8">
                            <h3 class="mb-0">Actualizar Usuario</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="heading-small text-muted mb-4">Información</h6>
                    <div class="pl-lg-4">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-username">Nombre completo</label>
                                    @Html.TextBoxFor(m => m.NombreCompleto, new { @type = "text", @class = "form-control", @placeholder = "Nombre Completo", @maxlength = "255", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Identificación</label>
                                    @Html.TextBoxFor(m => m.Identificacion, new { @type = "text", @class = "form-control", @placeholder = "Identificación", @maxlength = "12", @required = "required" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-last-name">Correo Electrónico</label>
                                    @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "Correo", @maxlength = "50", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-first-name">Teléfono</label>
                                    @Html.TextBoxFor(m => m.Telefono, new { @type = "text", @class = "form-control", @placeholder = "Teléfono", @maxlength = "50", @required = "required" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-last-name">Dirección</label>
                                    @Html.TextAreaFor(m => m.Direccion, new { @type = "text", @class = "form-control", @placeholder = "Dirección", @maxlength = "250", @required = "required" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-first-name">Estado</label>
                                    @Html.DropDownListFor(m => m.Estado, ViewBag.Estados as List<SelectListItem>, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-last-name">Rol</label>
                                    @Html.DropDownListFor(m => m.RolId, ViewBag.Roles as List<SelectListItem>, new { @class = "form-control", @required = "required" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4">
                        <input style="background-color:#855CBA; color:white" type="submit" class="btn my-4" value="Editar">
                    </div>
                </div>
                <div class="card-footer text-center py-3" style="background-color: #e9ecef;">
                    <a href="@Url.Action("ConsultarUsuarios", "Usuario")" class="text-muted small">
                        Volver a usuarios
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<script src="~/assets/js/enlace.js"></script>
